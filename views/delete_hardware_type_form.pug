extends layout 

block css
	link(rel='stylesheet' href='/stylesheets/form.css')

block content 
	form.d-flex.flex-column.align-items-stretch.gap-3(action=`${hardware_type.route_url}/delete` method='POST')
		h2 Delete Hardware Type
		.d-flex.flex-column.align-items-center.gap-3
			img(src='/icons/high_priority.png' alt='high priority' width='100' height='100')
			p.m-0.fs-5.text-warning Deleting a category will delete all hardware under it if any.
			p.m-0.fs-5.text-danger Admin password is required for this action.
		.d-flex.flex-column
			label(for='password') Admin Password*
			input#password(type='password' autofocus required)
		.d-flex.flex-column.gap-2.align-items-stretch
			button.my-button.red.w-auto(type='submit') Delete
			a.my-button.brown.w-auto(href=hardware_type.route_url) Cancel