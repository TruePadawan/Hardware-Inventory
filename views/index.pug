extends layout

block css
	if hardware_types.length > 0
		link(rel='stylesheet' href='/stylesheets/index.css')
	else
		link(rel='stylesheet' href='/stylesheets/index-no-hardware-type.css')

block content
	if hardware_types.length > 0
		main.flex-grow-1.hardware-type-list
			a(href='/hardware_types/new' class='create-category text-white d-flex flex-column align-items-center gap-3')
				img(src='/icons/pencil_100px.png' alt='pencil')
				p.fs-4.text-center Create Hardware Type
			for hardware_type in hardware_types
				if hardware_type.img_filename
					a.hardware-type-item.has-image.fs-4(href=hardware_type.route_url)
						img(src=hardware_type.image_url alt='hardware type image')
						span.name=hardware_type.name
				else
					a.hardware-type-item.fs-4(href=hardware_type.route_url)=hardware_type.name
	else
		main.d-flex.justify-content-center.align-items-center
			a.create-hardware.text-white.d-flex.flex-column.align-items-center.gap-3(href='/hardware_types/new')
				img(width='100' height='100' src='/icons/pencil_100px.png' alt='pencil')
				p.fs-4.text-center Create Hardware Type